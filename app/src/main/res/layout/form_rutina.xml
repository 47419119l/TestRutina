<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView10" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView11"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_query_builder_indigo_a400_24dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nomformRutina"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView11"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView12"
            android:src="@drawable/ic_query_builder_indigo_a400_24dp"
            android:layout_below="@+id/nomformRutina"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nivellrutinaform"
            android:layout_below="@+id/imageView11"
            android:layout_toRightOf="@+id/imageView11"
            android:layout_alignRight="@+id/nomformRutina"
            android:layout_alignEnd="@+id/nomformRutina" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView13"
            android:src="@drawable/ic_query_builder_indigo_a400_24dp"
            android:layout_below="@+id/imageView12"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tempsrutinaform"
            android:layout_alignTop="@+id/imageView13"
            android:layout_toRightOf="@+id/imageView13"
            android:layout_alignRight="@+id/nivellrutinaform"
            android:layout_alignEnd="@+id/nivellrutinaform" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView14"
            android:src="@drawable/ic_query_builder_indigo_a400_24dp"
            android:layout_below="@+id/tempsrutinaform"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/descripform"
            android:layout_alignTop="@+id/imageView14"
            android:layout_toRightOf="@+id/imageView14"
            android:layout_alignRight="@+id/tempsrutinaform"
            android:layout_alignEnd="@+id/tempsrutinaform" />

    </RelativeLayout>
</LinearLayout>